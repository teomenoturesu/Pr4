<Window x:Class="Pr4.CustomerNavigationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr4"
        mc:Ignorable="d"
        Title="Навигация" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Навигационное окно покупателя"
                   FontSize="30"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock FontSize="20"><Hyperlink Name="CatalogueHyperlink" Click="CatalogueHyperlink_Click">Каталог товаров</Hyperlink></TextBlock>
            <TextBlock FontSize="20"><Hyperlink Name="OrdersHyperlink" Click="OrdersHyperlink_Click">Список заказов</Hyperlink></TextBlock>
        </StackPanel>
    </Grid>
</Window>
